generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique 
  password String?
  premium Boolean @default(false)
  orgs Org[] @relation("UserOrgs")
  orgCount Int @default(0)
  dailyNotificationCount Int @default(0) 
  lastNotificationReset DateTime @default(now()) 
  createdAt DateTime @default(now())
}

model Org{
  id String @id @default(uuid())
  name String
  notifications Notification[]
  userId String
  user User @relation("UserOrgs", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@map("Org")
}

model Notification{
  id String @id @default(uuid())
  sentTime DateTime @default(now())
  content String
  orgId String
  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgName String 
  senderName String
  senderId String 
}